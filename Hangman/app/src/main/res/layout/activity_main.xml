<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/background_dark">
    <TextView
            android:text="@string/word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/guessWord" android:textSize="30sp"
            android:textColor="@android:color/background_light" android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/keyboard"
            app:layout_constraintStart_toEndOf="@+id/image" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.5"/>
    <Button
            android:text="@string/nowa_gra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            android:onClick="reset"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="328dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/wisielec0"
            android:id="@+id/image"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/keyboard" app:layout_constraintVertical_bias="0.5"
            android:layout_marginTop="32dp" android:layout_marginBottom="32dp" android:cropToPadding="false"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/keyboard" android:gravity="center"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b1" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Ą"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b2" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b3" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b4" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Ć"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b5" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b6" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b7" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Ę"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b8" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b9" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="G"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b10" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="H"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b11" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b12" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="J"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b13" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="K"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b14" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b15" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Ł"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b16" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b17" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="N"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b18" android:layout_weight="1"
                    android:onClick="letter"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                    android:text="Ń"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b19" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="O"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b20" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Ó"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b21" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="P"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b22" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b23" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b24" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b25" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Ś"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b26" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="T"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b27" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="U"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b28" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="V"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b29" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="W"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b30" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b31" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b32" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b33" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Ź"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b34" android:layout_weight="1"
                    android:onClick="letter"/>
            <Button
                    android:text="Ż"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/b35" android:layout_weight="1"
                    android:onClick="letter"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>